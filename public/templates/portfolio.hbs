<main id="portfolio">
  <div class="inner">
    <div class="row">
      <section class="module seven columns">
        <h2>{{name}}</h2>
        <div class="red btn" {{action delete portfolio}}>Delete</div>
      </section>
      <!-- section id="holdings" class="module seven columns">
        <h3>Holdings</h3>
        
        {{!holding-chart slug=id data=holdings}}

        <a class="view-more" href="">View More</a>
      </section -->
      <section id="recent-transactions" class="module five columns">
        <h3>Transactions</h3>
        <button class="new-transaction btn" {{action 'newTransaction'}}>New</button>
        
          {{#if transactions}}
            <table>
              <tr>
                <th>Ticker</th>
                <th>Type</th>
                <th>Price</th>
                <th>Shares</th>
                <th>Value</th>
              </tr>
              {{#each transaction in transactions}}
                <tr>
                  {{#each stock in transaction.stocks}}
                    <td>{{#link-to 'quote' stock.id}}{{stock.id}}{{/link-to}}</td>
                  {{/each}}
                  <td>{{transaction.type}}</td>
                  <td>{{transaction.price}}</td>
                  <td>{{transaction.shares}}</td>
                  <td>{{currency transaction.value}}</td>
                </tr>
              {{/each}}
            </table>
          {{else}}
            <div>There are no transactions.</div>
          {{/if}}
        </table>

        <!-- a class="view-more" href="">View More</a -->
      </section>
    </div>
  </div>
</main>