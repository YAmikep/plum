<header id="main-header">
  <div class="inner">
    <div class="row">
      <div class="nine columns">
        <a href="#" class="logo">Plum</a>
        {{stock-search stocks=stocks action='search'}}
      </div>

      <div class="three columns">
        <a href='#' class='new-portfolio'>New Portfolio</a>
        
        {{#link-to 'user' user.id}}
