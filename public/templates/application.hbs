<header id="main-header">
  <div class="inner">
    <div class="row">
      <div class="two columns">
        <a href="#" class="logo">Plum</a>
      </div>

      <div class="five columns">
        <nav id="main-nav">
          <ul>
            <li>{{#link-to "portfolios"}}Portfolios{{/link-to}}</li>
            <li>{{#link-to "users"}}Users{{/link-to}}</li>
            <li>{{#link-to "protected"}}Protected{{/link-to}}</li>

            {{#if session.isAuthenticated}}
              <li>{{session.username}}</li>
              <li><a {{action 'invalidateSession'}}>Logout</a></li>
            {{else}}
              <li>{{#link-to 'login'}}Login{{/link-to}}</li>
            {{/if}}
          </ul>
        </nav>
      </div>

      <div class="five columns">
        {{stock-search stocks=model action='search'}}
      </div>
    </div>
  </div>
</header>

{{outlet}}

<footer id="main-footer">
  <div class="inner">
    <div class="row">
      <div class="six columns">
        <div class="copyright">Copyright &copy; 2015. All rights reserved.</div>
      </div>
      <div class="six columns">
        <div class="author">Created by <a href="http://jadn.co">Jaden Dessureault.</a></div>
      </div>
    </div>
  </div>
</footer>