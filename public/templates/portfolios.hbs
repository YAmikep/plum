<main id="portfolios">
  <div class="inner">
    {{#each row in rows}}
      <div class="row">
        {{#each portfolio in row}}
          <article id="portfolio" class="four columns">
            {{#link-to 'portfolio' portfolio.id}}
              <div class="name">{{portfolio.name}}</div>
              <div class="value">{{currency portfolio.value}}</div>

              {{#each holding in portfolio.holdings}}
                <div {{bind-attr class=':holding ad'}}> {{holding.id}} Holding: {{percent holding.percent}} Return: {{percent holding.overallReturn}}</div>
              {{/each}}
            {{/link-to}}
          </article>
        {{/each}}
      </div>
    {{/each}}
  </div>
</main