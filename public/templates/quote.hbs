<main id="quote">
  <section>
    <div class="inner">
      <div class="row">
        <div class="nine columns">
          <div class="cf">
            <div class="cf">
              <div class="ticker">{{ticker}}</div>
              <div class="price">
                <span {{bind-attr class=':arrow ad'}}></span>
                {{withCommas price}}
              </div>
            </div>
            <div class="cf">
              <div class="name">{{name}}</div>
              <div {{bind-attr class=':change ad'}}>{{change}} ({{percentChange}})</div>
            </div>
          </div>

          <div class="module graph">
            {{quote-chart quote=id data=content}}
          </div>

          <div>{{time lastTradeTime}}</div>

          {{#modal-overlay id='portfolio-modal'}}
            <h2>New Trade</h2>
            Add <strong>{{ticker}}</strong> to a portfolio
            {{view 'select'
              content=controllers.application.portfolios
              optionLabelPath='content.name'
              optionValuePath='content.id'
              prompt='Add to portfolio'
              selection=selectedPortfolio
            }}
          {{/modal-overlay}}
        </div>

        <div class="module three columns">
          <button class="add-to-portfolio btn" {{action 'showPortfolioModal'}}>Add to portfolio</button>
          <div class="volume"><b>Volume:</b> {{withCommas volume}}</div>
        </div>
      </div>
    </div>
  </section>
</main>